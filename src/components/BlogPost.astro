---
const { image, alt, url, tags, title, description, pubDate } = Astro.props;
---

<div class="post flex gap-4 py-4 px-2 rounded-2xl mb-4">
  <div class="flex self-center">
    <img
      src={image}
      alt={alt}
      width="300"
      class="max-w-none h-44 rounded-3xl object-cover"
    />
  </div>
  <div class="flex flex-col gap-4">
    <div class="flex items-center">
      {
        tags?.map((tag) => (
          <p class="tag w-max text-center m-1 rounded-2xl py-2 px-4 text-sm">
            {tag}
          </p>
        ))
      }
    </div>
    <a class="post-title" href={url}>{title}</a>
    <p>{description}</p>
    <p class="post-date">{pubDate?.toString().slice(0, 10)}</p>
  </div>
</div>

<style>
  .post {
    background-color: floralwhite;
  }

  .tag {
    background-color: #ffe1de;
  }

  .post-title {
    background-image: linear-gradient(
      90deg,
      hsl(0deg 100% 92%) 0%,
      hsl(6deg 100% 92%) 32%,
      hsl(11deg 100% 93%) 47%,
      hsl(15deg 100% 93%) 58%,
      hsl(19deg 100% 93%) 67%,
      hsl(23deg 98% 94%) 75%,
      hsl(28deg 94% 94%) 81%,
      hsl(32deg 90% 95%) 88%,
      hsl(37deg 87% 96%) 94%,
      hsl(43deg 88% 97%) 100%
    );
    padding: 0.5rem;
    border-radius: 16px;
    /* text-transform: uppercase;
    font-weight: bold; */
    color: #680006;
    font-size: 20px;
  }

  .post-title:hover {
    color: #a4161e;
  }

  .post-date {
    font-size: 12px;
    color: #cab2a3;
  }
</style>
